<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.vibecut.CustomizeProject.CustomTimePicker
        android:id="@+id/custom_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="2">
        <RelativeLayout
            android:id="@+id/selectMediaButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/project_dialog_rounded_button_background_gray"
            android:layout_marginEnd="5dp">

            <TextView
                android:text="Сохранить"
                android:id="@+id/selectMediaText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lemonmilkrusbylyajka"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/project_dialog_rounded_button_background_gray"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/button_save"
                android:text="Отмена"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lemonmilkrusbylyajka"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
